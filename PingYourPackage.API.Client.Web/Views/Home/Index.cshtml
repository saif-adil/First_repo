@model WebApiDoodle.Net.Http.Client.Model.PaginatedDto<PingYourPackage.API.Model.Dtos.ShipmentDto>
@{
    ViewBag.Title = "Shipments";
}
<h2>Shipments</h2>

<table>
    <thead>
        <tr>
            <th>Shipment Key</th>
            <th>Price</th>
            <th>Receiver Name</th>
            <th>Receiver Surname</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var shipment in Model.Items) {
            <tr>
                <td>
                    @shipment.Key
                </td>
                <td>
                    @shipment.Price
                </td>
                <td>
                    @shipment.ReceiverName
                </td>
                <td>
                    @shipment.ReceiverSurname
                </td>
                <td>
                    @shipment.ShipmentStates.OrderByDescending(x => x.ShipmentStatus).FirstOrDefault().ShipmentStatus
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = shipment.Key })
                    @Html.ActionLink("Edit", "Edit", new { id = shipment.Key })
                    @Html.ActionLink("Delete", "Delete", new { id = shipment.Key })
                </td>
            </tr>
        }
    </tbody>
</table>

 @CustomHelpers.Pager(Model)

<p>
    @Html.ActionLink("Add New Shipment", "Create")
</p>